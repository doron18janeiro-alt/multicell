generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Customer {
  id            String         @id @default(uuid())
  companyId     String         @default("multicell-oficial")
  name          String
  phone         String
  document      String?        
  createdAt     DateTime       @default(now())
  // Relação corrigida:
  serviceOrders ServiceOrder[]
  sales         Sale[]

  @@unique([document, companyId]) // Garante unicidade por empresa
}

enum OSStatus {
  ABERTO
  EM_REPARO
  EM_ANDAMENTO // Added alias/option
  AGUARDANDO_PECA
  PRONTO
  FINALIZADO
  CANCELADO
}

enum SaleStatus {
  COMPLETED
  REFUNDED
}

model Product {
  id          String   @id @default(cuid())
  companyId   String   @default("multicell-oficial")
  name        String
  description String?
  category    String
  stock       Int      @default(0)
  minStock    Int      @default(5)
  minQuantity Int      @default(2)
  costPrice   Float    @default(0) // Preço de custo para o lucro
  salePrice   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relacionamentos necessários:
  supplierId  String?
  supplier    Supplier?  @relation(fields: [supplierId], references: [id])
  sales       SaleItem[]
}

model ServiceOrder {
  id             Int      @id @default(autoincrement())
  companyId      String   @default("multicell-oficial")
  clientName     String
  clientPhone    String
  clientCpf      String?
  deviceBrand    String   // Ex: Samsung, Dell, HP
  deviceModel    String   // Ex: S23, Latitude 3420
  deviceColor    String?
  serialNumber   String?
  devicePassword String?
  problem        String
  observations   String?
  checklist      Json?    
  status         OSStatus @default(ABERTO)
  
  // Financeiro da O.S. (Garantindo lucro livre)
  costPrice      Float    @default(0) // Valor gasto em peças
  servicePrice   Float    @default(0) // Valor da mão de obra
  totalPrice     Float    @default(0) // Valor total cobrado
  paymentMethod  String?  

  // Relação com Customer (Obrigatório para o Prisma):
  customerId     String?
  customer       Customer? @relation(fields: [customerId], references: [id])
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Supplier {
  id          String    @id @default(uuid())
  companyId   String    @default("multicell-oficial")
  name        String
  contact     String?
  whatsapp    String?
  catalogUrl  String?
  products    Product[]
}

model Sale {
  id            Int        @id @default(autoincrement())
  companyId     String     @default("multicell-oficial")
  total         Float
  discount      Float?     @default(0) // Descontos aplicados na venda
  feeAmount     Float?     @default(0) // Taxa de cartão descontada
  netAmount     Float?     // Valor líquido (total - fee)
  paymentMethod String
  cardType      String?    // DEBITO ou CREDITO
  serviceOrderId Int?      // Link para O.S. (opcional, pois pode ser venda de balcão)
  status        SaleStatus @default(COMPLETED)
  returnReason  String?
  
  // Relação com Cliente
  customerId    String?
  customer      Customer?  @relation(fields: [customerId], references: [id])

  createdAt     DateTime   @default(now())
  items         SaleItem[]
}

model SaleItem {
  id        Int     @id @default(autoincrement())
  saleId    Int
  sale      Sale    @relation(fields: [saleId], references: [id])
  productId String?
  product   Product? @relation(fields: [productId], references: [id])
  description String? // Para itens sem produto cadastrado (ex: Serviço)
  quantity  Int
  unitPrice Float
}

model CompanyConfig {
  id        String   @id @default(cuid())
  companyId String   @default("multicell-oficial")
  name      String   @default("Multicell")
  document  String?  // CNPJ
  phone     String?
  address   String?
  logoUrl   String?  @default("/logo.png")
  debitRate Float    @default(1.99)
  creditRate Float   @default(3.99)
  updatedAt DateTime @updatedAt
  
  @@unique([companyId])
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
}

model DailyClosing {
  id          String    @id @default(cuid())
  companyId   String    @default("multicell-oficial")
  date        DateTime  // Data de referência (meia-noite)
  totalCash   Float     @default(0)
  totalPix    Float     @default(0)
  totalDebit  Float     @default(0)
  totalCredit Float     @default(0)
  totalNet    Float     @default(0)
  status      String    @default("OPEN") // OPEN, CLOSED
  closedAt    DateTime?
  createdAt   DateTime  @default(now())
  
  @@unique([date, companyId])
}
